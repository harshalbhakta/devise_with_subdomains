<!DOCTYPE html>
<html>
  <head>
    <title><%= @subdomain_app.name %></title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <ul>
      <% if app_user_signed_in? %>
        <li>
        <%= current_app_user.name %>
        <%= link_to('Logout', destroy_app_user_session_url, method: :delete) %>
        </li>
      <% else %>
        <li>
        <%= link_to('Login', new_app_user_session_url)  %>
        </li>
      <% end %>
    </ul>

    <%= render "layouts/application/alert_messages" %>

    <%= yield %>
  </body>
</html>
